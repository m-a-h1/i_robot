extends base

block content
  .contact-form.spad
    .container
      .row
        .col-lg-6
          .section-title
              h3 ثبت نام
          form(action='#')
            .row
              .col-lg-12
                .input-list
                  input.w-75(type='text' name='username' placeholder='نام کاربری')
                  input.w-75(type='email' name='email' placeholder='ایمیل')
                  input.w-75(type='password' name='password' placeholder='پسورد')
                  input.w-75(type='password' name='passwordConfirm' placeholder='تکرار پسورد')
            button#signup.site-btn ادامه 
        .col-lg-6
          .section-title
              h3 ورود
          form(action='#')
            .row
              .col-lg-12
                .input-list
                  input.w-75(type='text' name='username' placeholder='نام کاربری')
                  input.w-75(type='password' name='password' placeholder='پسورد')
            button#signin.site-btn ورود
