  // Register Domain Section Begin
  section.register-domain.spad
    .container
      .row.d-flex.justify-content-center
        .col-lg-8
          .register__text
            .section-title
              h3 Register Your Domain Now!
            .register__form
              form(action='#')
                input(type='text', placeholder='ex: cloudhost')
                .change__extension
                  | .com
                  ul
                    li .net
                    li .org
                    li .me
                button.site-btn(type='submit') Search
            .register__result
              ul
                li
                  | .com 
                  span $1.95
                li
                  | .net 
                  span $1.95
                li
                  | .org 
                  span $1.95
                li
                  | .us 
                  span $1.95
                li
                  | .in 
                  span $1.95
